generator client {
  provider = "prisma-client-js"
}

generator clientTest {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client-test"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: Consider renaming chainId to chainName

model Deposit {
  id        String   @id
  chainName String
  fundingTxHash String
  outputIndex Int
  hashes    Json
  receipt   Json
  owner     String
  status    Int
  L1OutputEvent Json?
  dates     Json
  error     String?

  @@index([chainName])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  timestamp  DateTime @default(now())
  eventType  String
  depositId  String?
  data       Json
  errorCode  Int?
  chainName  String?

  @@index([chainName])
}

model Redemption {
  id        String   @id
  chainName String
  status    String
  data      Json

  @@index([chainName])
}
