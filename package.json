{
  "name": "tbtc-relayer",
  "version": "1.0.0-pre",
  "description": "Threshold Network tBTC Cross-Chain Relayer",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "yarn build && node --env-file .env dist/index.js",
    "start:dev": "yarn build && node dist/index.js",
    "dev": "tsx watch --env-file .env --trace-warnings index.ts",
    "start:l1node": "npx hardhat node --config hardhat.l1node.config.ts --port 8545",
    "start:l2node": "npx hardhat node --config hardhat.l2node.config.ts --port 9545",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "build": "yarn clean:build && tsc",
    "clean:build": "rimraf ./dist",
    "swagger": "node swagger.js",
    "lint": "eslint . --ext .ts --cache",
    "lint:fix": "eslint . --ext .ts --cache --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "keywords": [],
  "author": "T-Labs",
  "license": "ISC",
  "dependencies": {
    "@ethersproject/experimental": "^5.8.0",
    "@wormhole-foundation/sdk": "^1.18.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "ethers": "5.8.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "pino": "^9.6.0",
    "rimraf": "^6.0.1"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@jest/globals": "^29.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/ignition-core": "^0.15.11",
    "@typechain/ethers-v5": "^11.1.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^22.13.14",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "chai": "^4.2.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "globals": "^16.1.0",
    "improved-yarn-audit": "^3.0.3",
    "hardhat": "^2.24.0",
    "hardhat-gas-reporter": "^1.0.8",
    "jest": "^29.7.0",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.5.3",
    "solidity-coverage": "^0.8.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.4",
    "typechain": "^8.3.0",
    "typescript": "^5.5.3"
  }
}
