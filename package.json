{
  "name": "tbtc-relayer",
  "version": "1.0.0-pre",
  "description": "Threshold Network tBTC Cross-Chain Relayer",
  "main": "index.ts",
  "scripts": {
    "start": "npm run build && node --env-file .env dist/index.js",
    "start:dev": "npm run build && node dist/index.js",
    "dev": "ts-node-dev --watch --trace-warnings --env-file .env.dev index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "npm run clean:build && tsc",
    "clean:build": "rimraf ./dist",
    "swagger": "node swagger.js",
    "lint": "eslint . --ext .ts --cache",
    "lint:fix": "eslint . --ext .ts --cache --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "keywords": [],
  "author": "T-Labs",
  "license": "ISC",
  "dependencies": {
    "@certusone/wormhole-sdk": "^0.10.18",
    "@coral-xyz/anchor": "^0.31.0",
    "@ethersproject/experimental": "^5.7.0",
    "@solana/web3.js": "^1.98.0",
    "axios": "^1.7.2",
    "bitcoinjs-lib": "^6.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "eth-crypto": "^2.6.0",
    "ethers": "5.7.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.14",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "ganache": "^7.9.2",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "nock": "^13.5.4",
    "prettier": "^3.5.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}
