{
  "name": "tbtc-relayer",
  "version": "1.0.0-pre",
  "description": "Threshold Network tBTC Cross-Chain Relayer",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "postinstall": "yarn run prisma:generate",
    "start": "yarn build && node --env-file .env dist/index.js",
    "start:dev": "yarn build && node dist/index.js",
    "dev": "tsx watch --env-file .env --trace-warnings index.ts",
    "test": "jest --runInBand",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "prebuild": "yarn clean:build && yarn run prisma:generate",
    "build": "tsc",
    "clean:build": "rimraf ./dist ./generated",
    "clean:all": "rimraf ./dist ./generated ./coverage ./node_modules/@prisma/client ./node_modules/@prisma/client-test",
    "fix": "bun run lint:fix && bun run format:fix",
    "lint": "eslint . --ext .ts --cache",
    "lint:fix": "eslint . --ext .ts --cache --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "db:migrate": "npx prisma migrate deploy",
    "db:migrate:auditlog": "tsx scripts/migrate-auditlog-to-db.ts",
    "db:backup": "pg_dump -h $POSTGRES_HOST -U $POSTGRES_USER -d $POSTGRES_DB -F c -b -v -f backup.dump",
    "db:restore": "pg_restore -h $POSTGRES_HOST -U $POSTGRES_USER -d $POSTGRES_DB -v backup.dump",
    "db:reset": "npx prisma db push --force-reset --accept-data-loss"
  },
  "keywords": [],
  "author": "T-Labs",
  "license": "ISC",
  "dependencies": {
    "@coral-xyz/anchor": "0.28.0",
    "@ethersproject/experimental": "^5.8.0",
    "@prisma/client": "6.8.2",
    "@solana/web3.js": "^1.98.0",
    "@wormhole-foundation/sdk": "^1.18.0",
    "bitcoinjs-lib": "^6.1.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethers": "5.8.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "p-limit": "^6.2.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.8.2",
    "rimraf": "^6.0.1",
    "starknet": "=6.0.0",
    "zod": "^3.25.16"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2",
    "globals": "^16.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@jest/globals": "^29.7.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.21",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "improved-yarn-audit": "^3.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.4",
    "typescript": "^5.5.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
