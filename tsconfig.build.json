{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./dist",
    "noEmit": false
  },
  "include": [
    "index.ts",
    "controllers/**/*.ts",
    "handlers/**/*.ts",
    "helpers/**/*.ts",
    "interfaces/**/*.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "utils/**/*.ts",
    "config/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "tests", "dist", "prisma", "target"]
}
